@{
    ViewData["Title"] = "Home Page";
}
@model User

<div class="container">
    <h2>Enter your information</h2>
    <form asp-action="register" method="POST">
        <div class="form-group row">
            <span asp-validation-for="FirstName"></span>
            <label asp-for="FirstName" class="col-sm-2 col-form-label">First Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="FirstName">
            </div>
        </div>
        <div class="form-group row">
            <span asp-validation-for="LastName"></span>
            <label asp-for="LastName" class="col-sm-2 col-form-label">Last Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="LastName">
            </div>
        </div>
        <div class="form-group row">
            <span asp-validation-for="Age"></span>
            <label asp-for="Age" class="col-sm-2 col-form-label">Age:</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" asp-for="Age">
            </div>
        </div>
        <div class="form-group row">
            <span asp-validation-for="Email"></span>
            <label asp-for="Email" class="col-sm-2 col-form-label">Email:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Email">
            </div>
        </div>
        <div class="form-group row">
            <span asp-validation-for="Password"></span>
            <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" asp-for="Password">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
