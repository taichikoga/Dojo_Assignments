@* 
  @model lowercase m to specify the data type of the view model
  @Model capital m to access the data
*@
@model List<Dictionary<string, object>>

<h2 class="text-center">All Posts</h2>
<hr>

@foreach (Dictionary<string, object> post in Model)
{
    <div class="card mx-auto text-center mb-3 w-50">
      <div class="card-header">
        <h5 class="card-title">
          @post["Topic"]
        </h5>
      </div>

      <div class="card-body">
        <h6 class="card-subtitle mb-2 text-muted">
          by: @post["Username"]
        </h6>
        <p class="card-text">
          @post["Body"]
        </p>
      </div>

      <div class="card-footer">
        @* asp-route-paramName=@paramValue *@
        <a 
          asp-controller="Posts"
          asp-action="Details"
          asp-route-id="@post["PostId"]"
          class="btn btn-info">
          View Details
        </a>
      </div>
    </div>
}
