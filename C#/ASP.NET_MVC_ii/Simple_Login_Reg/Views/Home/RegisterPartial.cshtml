@model Register

    <div class="main-left">
        <h1 class="display-4">Welcome</h1>
        <h2>Register</h2>
        <form action="register" method="POST">
            <div class="form-group row">
                <span asp-validation-for="FirstName"></span>
                <label asp-for="FirstName" class="col-sm-2 col-form-label">First Name:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="FirstName">
                </div>
            </div>
            <div class="form-group row">
                <span asp-validation-for="LastName"></span>
                <label asp-for="LastName" class="col-sm-2 col-form-label">Last Name:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="LastName">
                </div>
            </div>
            <div class="form-group row">
                <span asp-validation-for="Email"></span>
                <label asp-for="Email" class="col-sm-2 col-form-label">Email:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Email">
                </div>
            </div>
            <div class="form-group row">
                <span asp-validation-for="Password"></span>
                <label asp-for="Password" class="col-sm-2 col-form-label">Password:</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" asp-for="Password">
                </div>
            </div>
            <div class="form-group row">
                <span asp-validation-for="Confirm_PW"></span>
                <label asp-for="Confirm_PW" class="col-sm-2 col-form-label">Confirm_PW:</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" asp-for="Confirm_PW">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Sign up</button>
                </div>
            </div>
        </form>
    </div>