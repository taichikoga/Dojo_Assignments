@{
    ViewData["Title"] = "Login Page";
}
@model LoginUser

<form asp-action="Login" asp-controller="Home" method="POST">

    <div class="form-group">
        <label asp-for="LoginEmail"></label>
        <span
        class="text-danger font-weight-bold"
        asp-validation-for="LoginEmail">
        </span>
        <input class="form-control" asp-for="LoginEmail" value="taichi.tk.koga@@gmail.com"/>
    </div>

    <div class="form-group">
        <label asp-for="LoginPassword"></label>
        <span
        class="text-danger font-weight-bold"
        asp-validation-for="LoginPassword">
        </span>
        <input class="form-control" asp-for="LoginPassword" value="12345678"/>
    </div>

    <button class="btn btn-info">Login</button>
</form>
