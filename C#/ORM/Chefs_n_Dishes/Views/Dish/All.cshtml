@{
    ViewData["Title"] = "Dishes Page";
}
@model List<Dish>

<div class="text-center">
    <h1 class="display-4">Dishes Home</h1>
    <div class="header">
        <div class="nav">
            <a href="/">Chefs</a>
            <a href="Dish">Dishes</a>
        </div>
        <a href="newdishpage">Add a Dish</a>
    </div>
    <div class="main">
        <h2>Yum, take a look at our tasty dishes!</h2>
        <div class="table">
            <table>
                <tr>
                    <th>Name</th>
                    <th>Chef</th>
                    <th>Tastiness</th>
                    <th>Calories</th>
                </tr>
                @foreach (var dish in Model)
                {
                    <tr>
                        <td>@dish.DishName</td>
                        <td>@dish.Chef.FirstName @dish.Chef.LastName</td>
                        <td>@dish.Tastiness</td>
                        <td>@dish.Calories</td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
