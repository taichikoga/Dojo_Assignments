@{
    ViewData["Title"] = "Login Page";
}
@model LoginUser

<div class="text-center">
    <h1 class="display-4">Login</h1>
    <div class="text-right">
        <a href="/">Register</a>
    </div>
    <div class="main">
        <form asp-action="Login" asp-controller="Home" method="POST">

            <div class="form-group">
                <label asp-for="LoginEmail"></label>
                <span
                class="text-danger font-weight-bold"
                asp-validation-for="LoginEmail">
                </span>
                <input class="form-control" asp-for="LoginEmail" />
            </div>

            <div class="form-group">
                <label asp-for="LoginPassword"></label>
                <span
                class="text-danger font-weight-bold"
                asp-validation-for="LoginPassword">
                </span>
                <input class="form-control" asp-for="LoginPassword" />
            </div>

            <button class="btn btn-info">Login</button>
        </form>
    </div>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
