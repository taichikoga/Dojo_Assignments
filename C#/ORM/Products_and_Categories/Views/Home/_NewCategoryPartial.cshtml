@model Category
<h2>New Category</h2>
<form asp-action="NewCategory" asp-controller="Home" method="POST">
    <div class="form-group">
        <label asp-for="Name"></label>
        <span
        class="text-danger font-weight-bold"
        asp-validation-for="Name"
        >
        </span>
        <input class="form-control" asp-for="Name" />

