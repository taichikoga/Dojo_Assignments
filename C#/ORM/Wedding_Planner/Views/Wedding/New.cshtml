@{
    ViewData["Title"] = "New Wedding Page";
}
@model Wedding

<div class="text-center">
    <h1 class="display-4">Plan Your Wedding</h1>
    <div class="text-left">
        <form asp-action="Create" asp-controller="Wedding" method="POST">

        <div class="form-group">
            <label asp-for="WedderOne"></label>
            <span
            class="text-danger font-weight-bold"
            asp-validation-for="WedderOne"
            >
            </span>
            <input class="form-control" asp-for="WedderOne" />
        </div>

        <div class="form-group">
            <label asp-for="WedderTwo"></label>
            <span
            class="text-danger font-weight-bold"
            asp-validation-for="WedderTwo"
            >
            </span>
            <input class="form-control" asp-for="WedderTwo" />
        </div>

        <div class="form-group">
            <label asp-for="Date"></label>
            <span
            class="text-danger font-weight-bold"
            asp-validation-for="Date"
            >
            </span>
            <input class="form-control" asp-for="Date" />
        </div>

        <div class="form-group">
            <label asp-for="Address"></label>
            <span
            class="text-danger font-weight-bold"
            asp-validation-for="Address"
            >
            </span>
            <input class="form-control" asp-for="Address" />
        </div>

        <button class="btn btn-info">Create</button>
        </form>
    </div>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
