@{
    ViewData["Title"] = "New Activity Page";
}
@model Exercise

<div class="text-left">
    <h1 class="display-4">Create an Activity</h1>
    <div class="text-left">
        <form asp-action="Create" asp-controller="Center" method="POST">

        <div class="form-group">
            <label asp-for="Title"></label>
            <span
            class="text-danger font-weight-bold"
            asp-validation-for="Title"
            >
            </span>
            <input class="form-control" asp-for="Title" />
        </div>

        <div class="form-group">
            <label asp-for="DateTime"></label>
            <span
            class="text-danger font-weight-bold"
            asp-validation-for="DateTime"
            >
            </span>
            <input class="form-control" asp-for="DateTime" />
        </div>

        <div class="form-row">
            <div class="col">
                <label asp-for="Duration"></label>
                <span
                class="text-danger font-weight-bold"
                asp-validation-for="Duration"
                >
                </span>
                <input class="form-control" asp-for="Duration" />
            </div>
            <div class="col">
                <label asp-for="UnitOfTime"></label>
                <span
                class="text-danger font-weight-bold"
                asp-validation-for="UnitOfTime"
                >
                </span>
                <select class="form-control" asp-for="UnitOfTime">
                    <option value="Minutes">Minutes</option>
                    <option value="Hours">Hours</option>
                    <option value="Days">Days</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <span
            class="text-danger font-weight-bold"
            asp-validation-for="Description"
            >
            </span>
            <input class="form-control" asp-for="Description" />
        </div>

        <button class="btn btn-info">Create Activity</button>
        </form>
    </div>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
