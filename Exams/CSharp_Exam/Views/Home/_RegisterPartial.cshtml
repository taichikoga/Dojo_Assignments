@model User

<form asp-action="Register" asp-controller="Home" method="POST">

    <div class="form-group">
        <label asp-for="Name"></label>
        <span
        class="text-danger font-weight-bold"
        asp-validation-for="Name">
        </span>
        <input class="form-control" asp-for="Name" />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <span
        class="text-danger font-weight-bold"
        asp-validation-for="Email">
        </span>
        <input class="form-control" asp-for="Email" />
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <span
        class="text-danger font-weight-bold"
        asp-validation-for="Password">
        </span>
        <input class="form-control" asp-for="Password" />
    </div>

    <div class="form-group">
        <label asp-for="PasswordConfirm"></label>
        <span
        class="text-danger font-weight-bold"
        asp-validation-for="PasswordConfirm">
        </span>
        <input class="form-control" asp-for="PasswordConfirm" />
    </div>

    <button class="btn btn-info">Register</button>
</form>